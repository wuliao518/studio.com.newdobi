<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    android:orientation="vertical" >

     <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/beijing_background" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="finishActivity"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back1" />
        <!-- <ImageView
            android:layout_toRightOf="@id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="finishActivity"
            android:padding="3dp"
            android:layout_marginLeft="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/top" /> -->

        <TextView
            android:id="@+id/showText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="上传照片"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:padding="3dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/next_blue"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		<LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
		    >
		    
		    <ImageView
		        android:id="@+id/upload1"
		        android:layout_width="match_parent"
		        android:layout_height="120dp"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:adjustViewBounds="true"
		        android:scaleType="centerCrop"
		        android:src="@drawable/upload_photos"/>
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="正面"
		        android:textSize="15dp"
		        android:gravity="center"
		        android:textColor="#ababab"/>
		    
		</LinearLayout>
        

       <LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
		    >
		    
		    <ImageView
		        android:id="@+id/upload2"
		        android:layout_width="match_parent"
		        android:layout_height="120dp"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:adjustViewBounds="true"
		        android:scaleType="centerCrop"
		        android:src="@drawable/upload_photos"/>
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="左面"
		        android:gravity="center"
		        android:textSize="15dp"
		        android:textColor="#ababab"/>
		    
		</LinearLayout>

        <LinearLayout 
		    android:orientation="vertical"
		    android:layout_width="0dp"
            android:layout_height="140dp"
            android:layout_weight="1"
		    >
		    
		    <ImageView
		        android:id="@+id/upload3"
		        android:layout_width="match_parent"
		        android:layout_height="120dp"
		        android:layout_marginLeft="2dp"
		        android:layout_marginRight="2dp"
		        android:adjustViewBounds="true"
		        android:scaleType="centerCrop"
		        android:src="@drawable/upload_photos"/>
		    <TextView 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="右面"
		        android:textSize="15dp"
		        android:gravity="center"
		        android:textColor="#ababab"/>
		    
		</LinearLayout>
    </LinearLayout>

    

    <ImageView 
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/precautions"/>
    
    
    
    
    
    
    
    
    
    

</LinearLayout>