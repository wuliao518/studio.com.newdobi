<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
     <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/beijing_background" >

        <ImageView android:id="@+id/mImageview1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="finishActivity"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:src="@drawable/btn_back1" />
        
        <!-- <ImageView android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="finishActivity"
            android:padding="3dp"
            android:layout_toRightOf="@id/mImageview1"
            android:scaleType="centerInside"
            android:src="@drawable/top"/> -->

        <TextView
            android:id="@+id/showText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="未支付"
            android:textSize="16sp" />
      
    </RelativeLayout>
    
    
    
    
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

       <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="50dp"
            android:paddingBottom="5dip"
            android:paddingTop="10dip" 
            android:background="@drawable/beijing_background">

            <TextView
                android:id="@+id/tv_tab_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="未支付"
                android:gravity="center"
                android:textColor="@color/pay_red"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_tab_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textColor="#000"
                android:text="已支付"
                android:textSize="16sp"/>
           
        </LinearLayout>
		<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_bottom_line"
                android:layout_height="2dip"
                android:layout_width="40dp"
                android:scaleType="matrix"
                android:src="@color/pay_red"/>
        </LinearLayout>
    </LinearLayout>

	<ListView
	    android:id="@+id/lv_one"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/wen_grey"
	    android:divider="@android:color/transparent" >

    </ListView>
</LinearLayout>
