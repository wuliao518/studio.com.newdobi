<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/beijing_background">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:scaleType="centerInside"
            android:onClick="finishActivity"
            android:src="@drawable/btn_back1" />

        <TextView
            android:id="@+id/showText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="修改密码"
            android:textSize="16sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/login_linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:text="原密码"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >
                <EditText
                    android:id="@+id/old_edit"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:hint="请输入原密码"
                    android:password="true"
                    android:singleLine="true"
                    android:textColorHint="#666666"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/edit_bk" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:text="新密码"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="vertical" >
                <EditText
                    android:id="@+id/new_edit"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:hint="请输入新密码"
                    android:password="true"
                    android:singleLine="true"
                    android:textColorHint="#666666"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/edit_bk" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#fff"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:gravity="center_vertical"
                android:text="确认密码"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/commit_edit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:hint="请确认新密码"
                android:inputType="textPassword"
                android:password="true"
                android:singleLine="true"
                android:textColorHint="#666666"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- 登录button -->

        <Button
            android:id="@+id/signin_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:padding="5dp"
            android:text="确认"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#fff"
            android:scaleType="centerInside"
            android:background="#77A8EB" />
    </LinearLayout>

</LinearLayout>